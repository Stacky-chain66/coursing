<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            min-height: 100vh;

            /* Royal Blue + Black Gradient Background */
            background: linear-gradient(135deg, #000000, #0a0a23, #003366, #000000);
            background-size: 400% 400%;
            animation: bgAnimation 12s ease infinite;
            color: white;
        }

        @keyframes bgAnimation {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background: linear-gradient(180deg, #000000, #002147, #000000);
            color: white;
            padding-top: 20px;
            position: fixed;
            height: 100%;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.6);
        }

        .sidebar .logo {
            font-size: 37px;
            font-weight: bold;
            text-align: center;
            margin-bottom: 30px;
        }

        .sidebar nav ul {
            list-style: none;
            padding-left: 0;
        }

        .sidebar nav ul li {
            padding: 15px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

        .sidebar nav ul li a {
            color: white;
            text-decoration: none;
            font-size: 22px;
            font-weight: 600;
            display: flex;
            align-items: center;
            transition: background 0.3s ease, padding-left 0.3s ease;
        }

        .sidebar nav ul li a i {
            margin-right: 10px;
            font-size: 22px;
        }

        .sidebar nav ul li a:hover {
            background: rgba(0, 51, 102, 0.7);
            padding-left: 15px;
        }

        /* Main Content */
        .main-content {
            margin-left: 250px;
            padding: 20px;
            flex-grow: 1;
        }

        .dashboard-header {
            background: linear-gradient(90deg, #000000, #003366, #000000);
            color: white;
            padding: 20px;
            text-align: center;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
            margin-bottom: 20px;
            animation: headerPulse 5s ease-in-out infinite alternate;
        }

        @keyframes headerPulse {
            0% { box-shadow: 0 0 15px #003366; }
            100% { box-shadow: 0 0 25px #1e90ff; }
        }

        /* Card Container */
        .card-container {
            display: flex;
            justify-content: space-between;
            gap: 20px;
            margin-bottom: 20px;
            margin-top: 10px;
        }

        .card {
            flex: 1;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 10px;
            padding: 20px;
            backdrop-filter: blur(10px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
            text-align: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: scale(1.03);
            box-shadow: 0 6px 20px rgba(30, 144, 255, 0.5);
        }

        .card h3 {
            margin-bottom: 10px;
            color: #1e90ff;
        }

        .card p {
            font-size: 1.2rem;
            color: #ddd;
        }

        .card .btn {
            display: inline-block;
            background: linear-gradient(90deg, #003366, #1e90ff);
            background-size: 200% 200%;
            color: white;
            padding: 10px 20px;
            font-size: 1rem;
            text-decoration: none;
            border-radius: 5px;
            margin-top: 10px;
            transition: background-position 0.4s ease, transform 0.3s ease;
        }

        .card .btn:hover {
            background-position: 100% 0;
            transform: scale(1.05);
        }

        .card i {
            font-size: 40px;
            margin-bottom: 10px;
            color: #1e90ff;
        }

        /* Calendar */
        .calendar {
            background: rgba(255, 255, 255, 0.05);
            padding: 20px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
            border-radius: 10px;
            text-align: center;
        }

        .calendar h3 {
            font-size: 24px;
            margin-bottom: 10px;
            color: #1e90ff;
        }

        .calendar p {
            font-size: 20px;
            color: #ddd;
        }

        .calendar i {
            font-size: 35px;
            color: #1e90ff;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <div class="logo">ByteLogix Hub</div>
        <nav>
            <ul>
                <li><a href="home"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                <li><a href="course"><i class="fas fa-book-open"></i> Courses</a></li>
                <li><a href="enrollmentdata"><i class="fas fa-user-check"></i> Enrollment</a></li>
                <li><a href="enquiries"><i class="fas fa-question-circle"></i> Enquiry</a></li>
                <li><a href="/feedbackdata"><i class="fas fa-comments"></i> Feedback</a></li>
                <li><a href="/login"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
            </ul>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="dashboard-header">
            <h2>Welcome to the Admin Dashboard</h2>
        </div>

        <!-- Calendar Section -->
        <div class="calendar">
            <i class="fas fa-calendar-alt"></i>
            <h3>Today's Date</h3>
            <p id="calendar-date"></p>
        </div>

        <!-- Card Section -->
        <div class="card-container">
            <div class="card">
                <i class="fas fa-envelope"></i>
                <h3>Total Enquiry</h3>
                <a href="/contactcount" class="btn">View Contact Enquiries</a>
            </div>

            <div class="card">
                <i class="fas fa-users"></i>
                <h3>Total Enrollment</h3>
                <a href="/total-enrollments" class="btn">View Total Enrollments</a>
            </div>
        </div>
    </div>

    <script>
        // JavaScript to display today's date and day name
        const daysOfWeek = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
        const monthsOfYear = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];

        const today = new Date();
        const dayName = daysOfWeek[today.getDay()];
        const day = today.getDate();
        const month = monthsOfYear[today.getMonth()];
        
        document.getElementById('calendar-date').innerHTML = `${day} ${month}, ${dayName}`;
    </script>

</body>
</html>
