<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign In</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <style>
    /* ================= Styles unchanged ================= */
    body {
      font-family: 'Poppins', sans-serif;
      margin: 0;
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, #0e1532, #4b3891, #ff6a00, #d76d77);
      background-size: 300% 300%;
      animation: gradientBG 12s ease infinite;
      color: #fff;
    }

    @keyframes gradientBG {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    .login-container {
      width: 420px;
      max-width: 100%;
      border-radius: 20px;
      background: rgba(255, 255, 255, 0.08);
      backdrop-filter: blur(15px);
      -webkit-backdrop-filter: blur(15px);
      border: 2px solid rgba(255, 255, 255, 0.2);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.6);
      padding: 40px;
      animation: fadeIn 1s ease forwards;
    }

    .login-container h1 {
      text-align: center;
      margin-bottom: 30px;
      font-size: 2.3em;
      font-weight: 600;
      color: #fff;
      letter-spacing: 1px;
      text-shadow: 0 0 8px rgba(255, 255, 255, 0.4);
    }

    .login-form {
      display: flex;
      flex-direction: column;
      gap: 25px;
    }

    .form-group {
      position: relative;
    }

    .form-group input {
      width: 100%;
      padding: 16px 14px;
      border: none;
      border-radius: 12px;
      font-size: 1em;
      background: rgba(255, 255, 255, 0.15);
      color: #fff;
      transition: 0.3s ease;
    }

    .form-group input:focus {
      outline: none;
      background: rgba(255, 255, 255, 0.25);
      box-shadow: 0 0 8px #ff6a00;
    }

    .form-group label {
      position: absolute;
      top: 50%;
      left: 14px;
      transform: translateY(-50%);
      color: #ccc;
      font-size: 0.95em;
      pointer-events: none;
      transition: 0.3s ease;
    }

    .form-group input:focus + label,
    .form-group input:not(:placeholder-shown) + label {
      top: -8px;
      left: 10px;
      font-size: 0.8em;
      color: #ffaf7b;
      background: rgba(0, 0, 0, 0.5);
      padding: 0 6px;
      border-radius: 6px;
    }

    .eye-icon {
      position: absolute;
      top: 50%;
      right: 12px;
      transform: translateY(-50%);
      cursor: pointer;
    }

    .eye-icon img {
      width: 22px;
      height: 22px;
      filter: invert(1);
    }

    input[type="submit"] {
      background: linear-gradient(135deg, #ff6a00, #d76d77, #4b3891);
      border: none;
      border-radius: 12px;
      padding: 14px;
      font-size: 1em;
      color: #fff;
      cursor: pointer;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    input[type="submit"]:hover {
      transform: translateY(-3px) scale(1.05);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.5);
    }

    .form-group a {
      color: #ffaf7b;
      text-decoration: none;
      font-size: 0.9em;
      margin-top: 5px;
      display: inline-block;
    }

    .form-group a:hover {
      text-decoration: underline;
      color: #fff;
    }

    .error-message {
      color: #ff4f4f;
      font-size: 0.9em;
      margin-top: 4px;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>

<body>
  <div class="login-container">
    <h1>Sign In</h1>

    <form class="login-form" id="loginForm">
      <div class="form-group">
        <input type="text" id="name" name="name" autocomplete="off" placeholder=" " required>
        <label for="name"><i class="fa fa-user"></i> Your Name / Email</label>
      </div>

      <div class="form-group">
        <input type="password" id="password" name="password" autocomplete="off" placeholder=" " required>
        <label for="password"><i class="fa fa-lock"></i> Password</label>
        <span class="eye-icon" onclick="togglePasswordVisibility()">
          <img src="https://img.icons8.com/fluency-systems-regular/48/visible--v2.png" alt="Toggle Password Visibility">
        </span>
      </div>

      <div class="form-group">
        <input type="submit" value="Login">
      </div>

      <div class="form-group">
        <p align="center">New at ByteLogix Hub? <a href="/signup">Signup</a></p>
      </div>
    </form>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
  <script>
    function togglePasswordVisibility() {
      const passwordInput = document.getElementById('password');
      const eyeIcon = document.querySelector('.eye-icon img');
      if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        eyeIcon.src = 'https://img.icons8.com/fluency-systems-regular/48/visible--v2.png';
      } else {
        passwordInput.type = 'password';
        eyeIcon.src = 'https://img.icons8.com/fluency-systems-regular/48/invisible--v2.png';
      }
    }
  </script>

  <!-- Firebase Login -->
  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.12.0/firebase-app.js";
    import { getAuth, signInWithEmailAndPassword } from "https://www.gstatic.com/firebasejs/10.12.0/firebase-auth.js";

    const firebaseConfig = {
      apiKey: "AIzaSyD8LgtSkMbMD9rGSmhdeXoQ4iLYcszr4oA",
      authDomain: "course-selling-website-9af84.firebaseapp.com",
      projectId: "course-selling-website-9af84",
      storageBucket: "course-selling-website-9af84.firebasestorage.app",
      messagingSenderId: "559120788613",
      appId: "1:559120788613:web:ae9377858d748a6fc4cdec",
      measurementId: "G-EDQ0S25H67"
    };

    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);

    const loginForm = document.getElementById('loginForm');

    loginForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      const name = document.getElementById('name').value.trim();
      const password = document.getElementById('password').value.trim();

      // Admin login
      if (name === 'Admin') {
        const res = await fetch('/admin', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ name, password })
        });
        if (res.redirected) {
          window.location.href = res.url;
        } else {
          const data = await res.json();
          alert(data.message || 'Admin login failed');
        }
        return;
      }

      // Normal user login via Firebase (use name as email)
      try {
        const userCredential = await signInWithEmailAndPassword(auth, name, password);
        window.location.href = '/enroll-course';
      } catch (err) {
        alert('Login failed: ' + err.message);
      }
    });
  </script>
</body>
</html>
