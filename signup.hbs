<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            overflow: hidden;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;

            /* ðŸ”¥ Animated Gradient Background */
            background: linear-gradient(-45deg, #ff6a00, #ee0979, #8e44ad, #2575fc);
            background-size: 400% 400%;
            animation: gradientBG 15s ease infinite;
        }

        @keyframes gradientBG {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        p {
            margin-left: 15%;
        }

        .login-container {
            position: relative;
            width: 450px;
            max-width: 100%;
            border-radius: 12px;

            /* ðŸŽ¨ Gradient Glass Effect */
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.15), rgba(255, 255, 255, 0.05));
            backdrop-filter: blur(15px);
            -webkit-backdrop-filter: blur(15px);

            color: #fff;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
            padding: 30px;
            border: 1px solid rgba(255, 255, 255, 0.3);

            /* ðŸ”„ Container Gradient Animation */
            animation: containerGradient 8s ease-in-out infinite alternate;
        }

        @keyframes containerGradient {
            0% {
                background: linear-gradient(135deg, rgba(255, 255, 255, 0.15), rgba(255, 255, 255, 0.05));
            }
            100% {
                background: linear-gradient(135deg, rgba(255, 255, 255, 0.25), rgba(255, 255, 255, 0.1));
            }
        }

        .login-container h3 {
            text-align: center;
            margin: 30px 0;
            font-size: 2em;
            color: #fff;
        }

        .login-form {
            display: flex;
            flex-direction: column;
            box-sizing: border-box;
        }

        .form-group {
            position: relative;
            margin-bottom: 20px;
        }

        .form-group input {
            width: 100%;
            padding: 15px 15px 15px 40px;
            border: none;
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.2);
            color: #fff;
            box-sizing: border-box;
            font-size: 1em;
            transition: all 0.3s ease;
            outline: none;
        }

        .form-group input:focus {
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
        }

        .form-group i {
            position: absolute;
            top: 50%;
            left: 10px;
            transform: translateY(-50%);
            color: #fff;
            font-size: 1.2em;
        }

        .form-group .eye-icon {
            position: absolute;
            top: 68%;
            right: 10px;
            transform: translateY(-50%);
            cursor: pointer;
            color: #fff;
            display: flex;
            align-items: center;
        }

        .eye-icon img {
            width: 24px;
            height: 24px;
            filter: invert(1);
        }

        input[type="submit"] {
            background: linear-gradient(90deg, #ff6a00, #ee0979, #8e44ad, #2575fc);
            background-size: 300% 300%;
            animation: gradientButton 5s ease infinite;
            color: #fff;
            border: none;
            border-radius: 8px;
            padding: 14px;
            cursor: pointer;
            font-size: 1em;
            transition: transform 0.3s ease;
        }

        @keyframes gradientButton {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        input[type="submit"]:hover {
            transform: scale(1.05);
        }

        .form-group a {
            color: #fff;
            text-decoration: none;
        }

        .form-group a:hover {
            text-decoration: underline;
        }

        .error-message {
            color: #ff4d4d;
            font-size: 1em;
            margin-top: 5px;
        }
    </style>
</head>

<body>
    <div class="login-container">
       <h3>Create an account</h3>
        {{#if error}}
        <div class="error-message">{{error}}</div>
        {{/if}}

        <form class="login-form" >
            <div class="form-group {{#if usernameError}}error{{/if}}">
                <i class="fa fa-user"></i> Your Name:
                <br>
                <input type="text" id="name" name="name" autocomplete="off" required>
                <div class="error-message">{{usernameError}}</div>
            </div>

            <div class="form-group {{#if emailError}}error{{/if}}">
                <i class="fa fa-envelope"></i> Your Email:
                <br>
                <input type="email" id="email" name="email" autocomplete="off" required>
                <div class="error-message">{{emailError}}</div>
            </div>

            <div class="form-group {{#if passwordError}}error{{/if}}">
                <i class="fa fa-lock"></i> Your Password:
                <br>
                <input type="password" id="password" name="password" autocomplete="off" required>
                <span class="eye-icon" onclick="togglePasswordVisibility()">
                    <img src="https://img.icons8.com/fluency-systems-regular/48/visible--v2.png" alt="Toggle Password Visibility">
                </span>
                <div class="error-message">{{passwordError}}</div>
            </div>

            <div class="form-group">
                <input type="submit" value="Signup">
            </div>
        </form>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
    <script type="module">
  import { initializeApp } from "https://www.gstatic.com/firebasejs/10.12.0/firebase-app.js";
  import { getAuth, createUserWithEmailAndPassword } 
    from "https://www.gstatic.com/firebasejs/10.12.0/firebase-auth.js";

  const firebaseConfig = {
  apiKey: "AIzaSyD8LgtSkMbMD9rGSmhdeXoQ4iLYcszr4oA",
  authDomain: "course-selling-website-9af84.firebaseapp.com",
  projectId: "course-selling-website-9af84",
  storageBucket: "course-selling-website-9af84.firebasestorage.app",
  messagingSenderId: "559120788613",
  appId: "1:559120788613:web:ae9377858d748a6fc4cdec",
  measurementId: "G-EDQ0S25H67"
};

  const app = initializeApp(firebaseConfig);
  const auth = getAuth(app);

  // Handle signup
  async function signupUser(event) {
    event.preventDefault();
    const name = document.getElementById("name").value;
    const password = document.getElementById("password").value;

    // Convert name into fake email
    const fakeEmail = name + "@bytelogix.com";

    try {
      const userCredential = await createUserWithEmailAndPassword(auth, fakeEmail, password);
      alert("Signup Successful! Welcome " + name);
      window.location.href = "/home";  // redirect after signup
    } catch (error) {
      alert("Signup Failed: " + error.message);
    }
  }

  // Attach event listener
  document.querySelector(".login-form").addEventListener("submit", signupUser);
</script>

    <script>
        function togglePasswordVisibility() {
            const passwordInput = document.getElementById('password');
            const eyeIcon = document.querySelector('.eye-icon img');
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                eyeIcon.src = 'https://img.icons8.com/fluency-systems-regular/48/visible--v2.png';
            } else {
                passwordInput.type = 'password';
                eyeIcon.src = 'https://img.icons8.com/fluency-systems-regular/48/invisible--v2.png';
            }
        }

        document.addEventListener('DOMContentLoaded', function () {
            const passwordInput = document.getElementById('password');
            const eyeIcon = document.querySelector('.eye-icon');

            passwordInput.addEventListener('focus', function () {
                eyeIcon.style.display = 'flex';
            });

            passwordInput.addEventListener('blur', function () {
                if (passwordInput.value === '') {
                    eyeIcon.style.display = 'none';
                }
            });

            const form = document.querySelector('.login-form');
            const inputs = document.querySelectorAll('.login-form input');

            inputs.forEach(input => {
                input.addEventListener('input', () => {
                    const parent = input.closest('.form-group');
                    if (parent.classList.contains('error')) {
                        parent.classList.remove('error');
                        const errorMessage = parent.querySelector('.error-message');
                        if (errorMessage) {
                            errorMessage.textContent = '';
                        }
                    }
                });
            });
        });
    </script>
</body>

</html>
